<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_border_primary"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:clickable="true"
        android:focusable="true"
        >
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yêu cầu kết nối"
            android:textSize="16sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:id="@+id/tv_wifi_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Thanhnh"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            />
        <EditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_wifi_name"
            android:background="@drawable/bg_border_gray_5dp"
            android:hint="Nhập mật khẩu"
            android:textSize="14sp"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            android:imeOptions="actionDone"
            />
        <TextView
            android:id="@+id/btn_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/PrimaryButton"
            android:background="@drawable/bg_button_primary_disable"
            android:text="Connect"
            app:layout_constraintTop_toBottomOf="@id/edt_password"
            android:paddingVertical="8dp"
            android:paddingHorizontal="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="12dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>